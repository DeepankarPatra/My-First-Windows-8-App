<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="SmartToDoCS.FirstPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartToDoCS"
    xmlns:common="using:SmartToDoCS.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Smart ToDo</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF11590E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid x:ConnectionId='1'                      >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='6' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="Smart ToDo" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>
        <Canvas Margin="89,80,1056,81" Grid.Row="1">
            <StackPanel Orientation="Vertical" Width="221">
                <Button x:ConnectionId='5' Content="Add New Task" HorizontalAlignment="Left" Height="101" VerticalAlignment="Top" Width="221"                     BorderBrush="#FF1C8B10" Background="#FF147070" UseLayoutRounding="True"/>
            </StackPanel>
            <Button x:ConnectionId='3' Content="Give me a Task" HorizontalAlignment="Left" Height="101" VerticalAlignment="Top" Width="221" Canvas.Top="178"                      BorderBrush="#FF1C8B10" Background="#FF147070" UseLayoutRounding="True"/>
            <Button x:ConnectionId='4' Content="Show All Pending Tasks" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="221" Canvas.Top="367"                     BorderBrush="#FF1C8B10" Background="#FF147070" UseLayoutRounding="True"/>

        </Canvas>
        <TextBlock HorizontalAlignment="Left" Height="52" Margin="570,66,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter The Task Description" VerticalAlignment="Top" Width="439" FontSize="30" TextAlignment="Center"/>
        <TextBox x:Name="Task" HorizontalAlignment="Left" Height="185" Margin="587,150,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="422"/>
        <Button x:ConnectionId='2' Content="Save" HorizontalAlignment="Left" Height="59" Margin="716,466,0,0" Grid.Row="1" VerticalAlignment="Top" Width="163"                   BorderBrush="#FF1C8B10" Background="#FF147070" UseLayoutRounding="True"/>
        <CheckBox x:Name="reminder" Content="Remind Me" HorizontalAlignment="Left" Height="37" Margin="729,415,0,0" Grid.Row="1" VerticalAlignment="Top" Width="133"/>
        <TextBox x:Name="TaskTime" HorizontalAlignment="Left" Height="37" Margin="689,364,0,0" Grid.Row="1" TextWrapping="Wrap" Text="HH:MM DD:MM:YYYY" VerticalAlignment="Top" Width="231"/>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

